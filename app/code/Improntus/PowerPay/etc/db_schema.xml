<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="powerpay_transaction" resource="default" engine="innodb" comment="PowerPay Transaction Data">
        <column xsi:type="int" name="entity_id" unsigned="false" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="order_id" unsigned="true" nullable="false" comment="Order ID"/>
        <column xsi:type="varchar" name="transaction_id" nullable="false" comment="PowerPay Transaction ID"/>
        <column xsi:type="varchar" name="status" nullable="false" default="Pending" comment="PowerPay Order Status"/>
        <column xsi:type="varchar" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="varchar" name="expired_at" default="CURRENT_TIMESTAMP" comment="Expired At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="POWERPAY_TRANSACTION_ORDER_ID">
            <column name="order_id"/>
        </constraint>
    </table>
</schema>
