<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block
                class="Magento\Catalog\Block\Product\View"
                name="powerpay"
                template="Improntus_PowerPay::productWidget.phtml"
                ifconfig="payment/powerpay/widgets"
                before="product.info.addto">
                <arguments>
                    <argument name="view_model" xsi:type="object">Improntus\PowerPay\ViewModel\Widgets</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
