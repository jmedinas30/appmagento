<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block class="MageWorx\StoreLocator\Block\Header\Link"
                   name="add-new-header-link"
                   ifconfig="mageworx_locations/link_settings/show_link"/>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="MageWorx\StoreLocator\Block\Header\Link"
                   name="add-new-top-link"
                   ifconfig="mageworx_locations/link_settings/show_link" after="-"/>
        </referenceBlock>
    </body>
</page>
